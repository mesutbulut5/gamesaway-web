<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - GamesAway Dashboard</title>
    <link rel="stylesheet" href="~/css/style.css?v=2.0" asp-append-version="true">
    <link rel="stylesheet" href="~/css/dashboard.css?v=1.0" asp-append-version="true">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="dashboard-body">
    <!-- Sidebar -->
    <aside class="dashboard-sidebar">
        <div class="sidebar-header">
            <a asp-controller="Home" asp-action="Index" class="sidebar-logo">
                <div class="logo-icon">
                    <i class="fas fa-gamepad"></i>
                </div>
                <span>GamesAway</span>
            </a>
        </div>
        
        <nav class="sidebar-nav">
            <a asp-controller="Dashboard" asp-action="Index" class="sidebar-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                <i class="fas fa-chart-line"></i>
                <span data-tr="Kontrol Paneli" data-en="Dashboard">Kontrol Paneli</span>
            </a>
            <a asp-controller="Dashboard" asp-action="Analytics" class="sidebar-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Analytics" ? "active" : "")">
                <i class="fas fa-chart-bar"></i>
                <span data-tr="Analitik" data-en="Analytics">Analitik</span>
            </a>
            <a asp-controller="Dashboard" asp-action="Users" class="sidebar-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Users" ? "active" : "")">
                <i class="fas fa-users"></i>
                <span data-tr="Kullanıcılar" data-en="Users">Kullanıcılar</span>
            </a>
            <a asp-controller="Dashboard" asp-action="Games" class="sidebar-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Games" ? "active" : "")">
                <i class="fas fa-gamepad"></i>
                <span data-tr="Oyunlar" data-en="Games">Oyunlar</span>
            </a>
            <a asp-controller="Dashboard" asp-action="Monetization" class="sidebar-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Monetization" ? "active" : "")">
                <i class="fas fa-dollar-sign"></i>
                <span data-tr="Para Kazanma" data-en="Monetization">Para Kazanma</span>
            </a>
            <a asp-controller="Dashboard" asp-action="SupportTickets" class="sidebar-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "SupportTickets" ? "active" : "")">
                <i class="fas fa-headset"></i>
                <span data-tr="Destek Talepleri" data-en="Support Tickets">Destek Talepleri</span>
            </a>
            <a asp-controller="Dashboard" asp-action="Notifications" class="sidebar-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Notifications" ? "active" : "")">
                <i class="fas fa-bell"></i>
                <span data-tr="Bildirimler" data-en="Notifications">Bildirimler</span>
            </a>
        </nav>
        
        <div class="sidebar-footer">
            <div class="user-info">
                <div class="user-avatar">
                    <i class="fas fa-user"></i>
                </div>
                <div class="user-details">
                    <div class="user-name">@Context.Request.Cookies["UserName"]</div>
                    <a asp-controller="Auth" asp-action="Logout" class="logout-link" data-tr="Çıkış" data-en="Logout">Çıkış</a>
                </div>
            </div>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="dashboard-main">
        <div class="dashboard-header">
            <h1>@ViewData["Title"]</h1>
            <div class="header-actions">
                <button class="theme-toggle" id="themeToggle">
                    <i class="fas fa-moon"></i>
                </button>
                <button class="lang-toggle" id="langToggle">TR</button>
            </div>
        </div>
        
        <div class="dashboard-content">
            @RenderBody()
        </div>
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/main.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
