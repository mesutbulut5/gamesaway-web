@{
    ViewData["Title"] = "Kontrol Paneli";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<!-- Empty State - No Projects Yet -->
<div class="empty-project-state">
    <div class="empty-icon">
        <i class="fas fa-gamepad"></i>
    </div>
    <h2 data-tr="Geliştirici misiniz? İlk oyununuzu yükleyin." data-en="Are you a developer? Upload your first game.">Geliştirici misiniz? İlk oyununuzu yükleyin.</h2>
    <p class="empty-description" data-tr="Oyunlarınızı milyonlarca oyuncuyla paylaşın ve topluluğunuzu oluşturun." data-en="Share your games with millions of players and build your community.">Oyunlarınızı milyonlarca oyuncuyla paylaşın ve topluluğunuzu oluşturun.</p>
    <a asp-action="NewGame" class="btn-create-project">
        <i class="fas fa-plus"></i>
        <span data-tr="Yeni proje oluştur" data-en="Create new project">Yeni proje oluştur</span>
    </a>
    <a asp-controller="Home" asp-action="Browse" class="empty-project-link" data-tr="Hayır, beni oyunlar sayfasına götür." data-en="No, take me to the games page.">Hayır, beni oyunlar sayfasına götür.</a>
</div>

