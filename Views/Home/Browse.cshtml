                            <span class="filter-checkmark"></span>
                            <span>HTML5</span>
                        </label>
                        <label class="filter-checkbox">
                            <input type="checkbox" name="type" value="downloadable">
                            <span class="filter-checkmark"></span>
                            <span data-tr="İndirilebilir" data-en="Downloadable">İndirilebilir</span>
                        </label>
                    </div>
                </div>

                <!-- Çeşitli -->
                <div class="filter-group">
                    <button class="filter-group-toggle">
                        <i class="fas fa-chevron-right filter-arrow"></i>
                        <span data-tr="Çeşitli" data-en="Miscellaneous">Çeşitli</span>
                    </button>
                    <div class="filter-group-content">
                        <label class="filter-checkbox">
                            <input type="checkbox" name="misc" value="steam-keys">
                            <span class="filter-checkmark"></span>
                            <span data-tr="Steam anahtarlarıyla" data-en="With Steam keys">Steam anahtarlarıyla</span>
                        </label>
                        <label class="filter-checkbox">
                            <input type="checkbox" name="misc" value="game-jams">
                            <span class="filter-checkmark"></span>
                            <span data-tr="Oyun geliştirme yarışmalarında" data-en="In game jams">Oyun geliştirme yarışmalarında</span>
                        </label>
                        <label class="filter-checkbox">
                            <input type="checkbox" name="misc" value="not-in-jams">
                            <span class="filter-checkmark"></span>
                            <span data-tr="Oyun geliştirme etkinliklerinde değil" data-en="Not in game jams">Oyun geliştirme etkinliklerinde değil</span>
                        </label>
                        <label class="filter-checkbox">
                            <input type="checkbox" name="misc" value="with-demos">
                            <span class="filter-checkmark"></span>
                            <span data-tr="Demolarla birlikte" data-en="With demos">Demolarla birlikte</span>
                        </label>
                        <label class="filter-checkbox">
                            <input type="checkbox" name="misc" value="featured">
                            <span class="filter-checkmark"></span>
                            <span data-tr="Öne Çıkanlar" data-en="Featured">Öne Çıkanlar</span>
                        </label>
                        <label class="filter-checkbox">
                            <input type="checkbox" name="misc" value="in-collections">
                            <span class="filter-checkmark"></span>
                            <span data-tr="İlgili koleksiyonla" data-en="In collections">İlgili koleksiyonla</span>
                        </label>
                    </div>
                </div>

                <!-- Filter Actions -->
                <div class="filter-actions">
                    <button class="btn btn-primary btn-block filter-apply-btn" data-tr="Filtreleri Uygula" data-en="Apply Filters">Filtreleri Uygula</button>
                    <button class="btn btn-text btn-block filter-clear-btn" data-tr="Temizle" data-en="Clear All">Temizle</button>
                </div>
            </aside>

            <!-- Main Content -->
            <main class="browse-main">
                <!-- Header -->
                <div class="browse-header">
                    <div class="browse-header-left">
                        <h1 class="browse-title">
                            @if (!string.IsNullOrEmpty(category))
                            {
                                <span data-tr="@category Oyunları" data-en="@category Games">@category Oyunları</span>
                            }
                            else
                            {
                                <span data-tr="Tüm Oyunlar" data-en="All Games">Tüm Oyunlar</span>
                            }
                        </h1>
                        <p class="browse-subtitle" data-tr="10,000+ oyun bulundu" data-en="10,000+ games found">10,000+ oyun bulundu</p>
                    </div>
                    <div class="browse-header-right">
                        <select class="browse-sort-select" id="sortSelect">
                            <option value="popular" selected="@(sort == "popular")">Popüler</option>
                            <option value="newest" selected="@(sort == "newest")">En Yeni</option>
                            <option value="rating" selected="@(sort == "rating")">En İyi Puanlı</option>
                            <option value="downloads" selected="@(sort == "downloads")">En Çok İndirilen</option>
                        </select>
                    </div>
                </div>

                <!-- Games Grid -->
                <div class="browse-games-grid">
                    @for (int i = 1; i <= 12; i++)
                    {
                        var gradients = new[] { 
                            "linear-gradient(135deg, #667eea 0%, #764ba2 100%)",
                            "linear-gradient(135deg, #764ba2 0%, #f093fb 100%)",
                            "linear-gradient(135deg, #f093fb 0%, #f5576c 100%)",
                            "linear-gradient(135deg, #4facfe 0%, #00f2fe 100%)",
                            "linear-gradient(135deg, #43e97b 0%, #38f9d7 100%)",
                            "linear-gradient(135deg, #fa709a 0%, #fee140 100%)"
                        };
                        var categories = new[] { "Aksiyon", "Bulmaca", "Yarış", "Macera", "Spor", "Strateji" };
                        var gradient = gradients[i % gradients.Length];
                        var cat = categories[i % categories.Length];
                        
                        <div class="game-card">
                            <a asp-action="GameDetail" asp-route-id="@i" class="game-card-link">
                                <div class="game-card-image" style="background: @gradient;">
                                    <div class="game-card-overlay">
                                        <span class="game-card-play"><i class="fas fa-play"></i></span>
                                    </div>
                                    <span class="game-card-badge">Ücretsiz</span>
                                </div>
                                <div class="game-card-content">
                                    <h3 class="game-card-title">Amazing Game @i</h3>
                                    <p class="game-card-developer">by Developer @i</p>
                                    <div class="game-card-footer">
                                        <span class="game-card-category">@cat</span>
                                        <span class="game-card-rating">
                                            <i class="fas fa-star"></i> @(4.5 + (i % 5) * 0.1)
                                        </span>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>

                <!-- Pagination -->
                <div class="browse-pagination">
                    <button class="pagination-btn pagination-prev" disabled>
                        <i class="fas fa-chevron-left"></i>
                    </button>
                    <button class="pagination-btn pagination-number active">1</button>
                    <button class="pagination-btn pagination-number">2</button>
                    <button class="pagination-btn pagination-number">3</button>
                    <button class="pagination-btn pagination-number">4</button>
                    <button class="pagination-btn pagination-number">5</button>
                    <span class="pagination-dots">...</span>
                    <button class="pagination-btn pagination-number">50</button>
                    <button class="pagination-btn pagination-next">
                        <i class="fas fa-chevron-right"></i>
                    </button>
                </div>
            </main>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Filter group toggle
        document.querySelectorAll('.filter-group-toggle').forEach(toggle => {
            toggle.addEventListener('click', function() {
                const group = this.closest('.filter-group');
                group.classList.toggle('open');
            });
        });

        // Sort select change
        document.getElementById('sortSelect').addEventListener('change', function() {
            const sort = this.value;
            const url = new URL(window.location);
            url.searchParams.set('sort', sort);
            window.location = url;
        });

        // Filter apply
        document.querySelector('.filter-apply-btn').addEventListener('click', function() {
            const filters = {};
            
            // Collect all checked filters
            document.querySelectorAll('.filter-checkbox input:checked').forEach(input => {
                const name = input.name;
                if (!filters[name]) filters[name] = [];
                filters[name].push(input.value);
            });
            
            const url = new URL(window.location);
            Object.keys(filters).forEach(key => {
                url.searchParams.set(key, filters[key].join(','));
            });
            
            window.location = url;
        });

        // Filter clear
        document.querySelector('.filter-clear-btn').addEventListener('click', function() {
            // Uncheck all checkboxes
            document.querySelectorAll('.filter-checkbox input:checked').forEach(input => {
                input.checked = false;
            });
            
            // Redirect to clean URL
            window.location = '@Url.Action("Browse")';
        });
    </script>
}
