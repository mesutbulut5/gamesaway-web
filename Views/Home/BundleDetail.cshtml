@{
    ViewData["Title"] = "Paket Detayı";
    var bundleId = ViewBag.BundleId ?? 1;
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/bundles.css" asp-append-version="true">
}

<div class="bundle-detail-page">
    <!-- Bundle Header -->
    <section class="bundle-detail-hero" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
        <div class="container">
            <div class="bundle-detail-header">
                <span class="bundle-badge-large">%85 İNDİRİM</span>
                <h1>Indie Essentials Bundle</h1>
                <p class="bundle-detail-subtitle" data-tr="En sevilen 10 bağımsız oyunu içeren devasa paket!" data-en="Massive bundle containing 10 beloved indie games!">
                    En sevilen 10 bağımsız oyunu içeren devasa paket!
                </p>
                <div class="bundle-detail-pricing">
                    <span class="original">₺500</span>
                    <span class="current">₺75</span>
                </div>
                <a href="#" class="btn btn-light btn-large">
                    <i class="fas fa-shopping-cart"></i>
                    <span data-tr="Paketi Satın Al" data-en="Buy Bundle">Paketi Satın Al</span>
                </a>
                <p class="bundle-timer-text"><i class="fas fa-clock"></i> <span data-tr="5 gün 12 saat kaldı" data-en="5 days 12 hours left">5 gün 12 saat kaldı</span></p>
            </div>
        </div>
    </section>

    <div class="container">
        <!-- Bundle Games -->
        <section class="bundle-games-section">
            <div class="section-header">
                <h2 class="section-title" data-tr="Paketteki Oyunlar" data-en="Games in Bundle">Paketteki Oyunlar</h2>
                <span class="game-count">10 <span data-tr="oyun" data-en="games">oyun</span></span>
            </div>

            <div class="bundle-games-list">
                <a asp-action="GameDetail" asp-route-id="1" class="bundle-game-item">
                    <div class="bundle-game-image" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);"></div>
                    <div class="bundle-game-info">
                        <h3>Epic Battle Arena</h3>
                        <p>StudioX</p>
                        <span class="bundle-game-value">₺100 <span data-tr="değerinde" data-en="value">değerinde</span></span>
                    </div>
                    <div class="bundle-game-rating"><i class="fas fa-star"></i> 4.8</div>
                </a>

                <a asp-action="GameDetail" asp-route-id="2" class="bundle-game-item">
                    <div class="bundle-game-image" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);"></div>
                    <div class="bundle-game-info">
                        <h3>Mind Maze</h3>
                        <p>PuzzleMaster</p>
                        <span class="bundle-game-value">₺80 <span data-tr="değerinde" data-en="value">değerinde</span></span>
                    </div>
                    <div class="bundle-game-rating"><i class="fas fa-star"></i> 4.9</div>
                </a>

                <a asp-action="GameDetail" asp-route-id="3" class="bundle-game-item">
                    <div class="bundle-game-image" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);"></div>
                    <div class="bundle-game-info">
                        <h3>Speed Rush</h3>
                        <p>RaceTeam</p>
                        <span class="bundle-game-value">₺60 <span data-tr="değerinde" data-en="value">değerinde</span></span>
                    </div>
                    <div class="bundle-game-rating"><i class="fas fa-star"></i> 4.7</div>
                </a>

                <a asp-action="GameDetail" asp-route-id="4" class="bundle-game-item">
                    <div class="bundle-game-image" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);"></div>
                    <div class="bundle-game-info">
                        <h3>Lost Kingdom</h3>
                        <p>AdventureStudio</p>
                        <span class="bundle-game-value">₺50 <span data-tr="değerinde" data-en="value">değerinde</span></span>
                    </div>
                    <div class="bundle-game-rating"><i class="fas fa-star"></i> 4.6</div>
                </a>
            </div>
        </section>

        <!-- Charity Info -->
        <section class="bundle-charity-section">
            <div class="charity-content">
                <i class="fas fa-heart"></i>
                <h3 data-tr="Hayır Kurumlarına Destek" data-en="Supporting Charities">Hayır Kurumlarına Destek</h3>
                <p data-tr="Bu paketin gelirinin %10'u çeşitli hayır kurumlarına bağışlanmaktadır." data-en="10% of this bundle's proceeds go to various charities.">
                    Bu paketin gelirinin %10'u çeşitli hayır kurumlarına bağışlanmaktadır.
                </p>
            </div>
        </section>
    </div>
</div>

<style>
.bundle-detail-hero { padding: 80px 0; color: white; text-align: center; }
.bundle-badge-large { display: inline-block; background: rgba(255,255,255,0.2); padding: 0.75rem 2rem; border-radius: 30px; font-size: 1.5rem; font-weight: 700; margin-bottom: 1rem; }
.bundle-detail-header h1 { font-size: 2.5rem; font-weight: 800; margin-bottom: 1rem; }
.bundle-detail-subtitle { font-size: 1.25rem; opacity: 0.95; margin-bottom: 2rem; }
.bundle-detail-pricing { margin-bottom: 2rem; }
.bundle-detail-pricing .original { font-size: 1.5rem; text-decoration: line-through; opacity: 0.7; margin-right: 1rem; }
.bundle-detail-pricing .current { font-size: 3rem; font-weight: 800; }
.bundle-timer-text { margin-top: 1rem; opacity: 0.9; }
.bundle-games-section { padding: 3rem 0; }
.game-count { background: var(--light-color); padding: 0.5rem 1rem; border-radius: 20px; font-size: 0.9rem; color: var(--text-light); }
.bundle-games-list { display: flex; flex-direction: column; gap: 1rem; }
.bundle-game-item { display: flex; align-items: center; gap: 1.5rem; padding: 1rem; background: var(--card-bg); border-radius: 12px; text-decoration: none; color: inherit; transition: var(--transition); }
.bundle-game-item:hover { background: var(--light-color); }
.bundle-game-image { width: 80px; height: 80px; border-radius: 8px; flex-shrink: 0; }
.bundle-game-info { flex: 1; }
.bundle-game-info h3 { font-size: 1.1rem; font-weight: 600; color: var(--text-dark); margin-bottom: 0.25rem; }
.bundle-game-info p { font-size: 0.9rem; color: var(--text-light); margin-bottom: 0.5rem; }
.bundle-game-value { font-size: 0.85rem; color: var(--primary-color); font-weight: 500; }
.bundle-game-rating { color: #FFA500; font-weight: 600; }
.bundle-charity-section { padding: 3rem; background: var(--light-color); border-radius: 16px; text-align: center; margin: 2rem 0; }
.bundle-charity-section i { font-size: 2.5rem; color: #ff6b6b; margin-bottom: 1rem; }
.bundle-charity-section h3 { font-size: 1.5rem; font-weight: 700; margin-bottom: 0.5rem; color: var(--text-dark); }
.bundle-charity-section p { color: var(--text-light); }
</style>
