@{
    ViewData["Title"] = "Binlerce Ücretsiz Oyun Keşfet";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/home-sidebar.css" asp-append-version="true">
}

<!-- Home Page Layout with Sidebar -->
<div class="home-layout">
    <!-- Left Sidebar -->
    <aside class="home-sidebar">
        <!-- Ana Menü -->
        <nav class="sidebar-nav">
            <!-- Ana Sayfa -->
            <a asp-action="Index" class="sidebar-item active">
                <i class="fas fa-home"></i>
                <span data-tr="Ana Sayfa" data-en="Home">Ana Sayfa</span>
                <span class="sidebar-shortcut">H</span>
            </a>

            <!-- Keşfet -->
            <a asp-action="Browse" class="sidebar-item">
                <i class="fas fa-compass"></i>
                <span data-tr="Keşfet" data-en="Discover">Keşfet</span>
                <span class="sidebar-shortcut">D</span>
            </a>

            <div class="sidebar-divider"></div>

            <!-- Popüler Etiketler (Açılır) -->
            <div class="sidebar-dropdown">
                <button class="sidebar-item sidebar-dropdown-toggle">
                    <i class="fas fa-tags"></i>
                    <span data-tr="Popüler Etiketler" data-en="Popular Tags">Popüler Etiketler</span>
                    <i class="fas fa-chevron-down sidebar-arrow"></i>
                </button>
                <div class="sidebar-dropdown-menu">
                    <a asp-action="Browse" asp-route-tag="browser" class="sidebar-dropdown-item">
                        <span data-tr="Tarayıcı oyunları" data-en="Browser games">Tarayıcı oyunları</span>
                    </a>
                    <a asp-action="Browse" asp-route-tag="horror" class="sidebar-dropdown-item">
                        <span data-tr="Korku oyunları" data-en="Horror games">Korku oyunları</span>
                    </a>
                    <a asp-action="Browse" asp-route-tag="multiplayer" class="sidebar-dropdown-item">
                        <span data-tr="Çok oyunculu" data-en="Multiplayer">Çok oyunculu</span>
                    </a>
                    <a asp-action="Browse" asp-route-tag="visual-novel" class="sidebar-dropdown-item">
                        <span data-tr="Görsel romanlar" data-en="Visual novels">Görsel romanlar</span>
                    </a>
                    <a asp-action="Browse" asp-route-tag="simulation" class="sidebar-dropdown-item">
                        <span data-tr="Simülasyon" data-en="Simulation">Simülasyon</span>
                    </a>
                    <a asp-action="Browse" asp-route-tag="roguelike" class="sidebar-dropdown-item">
                        <span data-tr="Roguelike" data-en="Roguelike">Roguelike</span>
                    </a>
                    <a asp-action="Browse" class="sidebar-dropdown-item sidebar-view-all">
                        <span data-tr="Tüm etiketlere göz at →" data-en="Browse all tags →">Tüm etiketlere göz at →</span>
                    </a>
                </div>
            </div>

            <!-- Göz At (Açılır) -->
            <div class="sidebar-dropdown">
                <button class="sidebar-item sidebar-dropdown-toggle">
                    <i class="fas fa-th-large"></i>
                    <span data-tr="Göz At" data-en="Browse">Göz At</span>
                    <i class="fas fa-chevron-down sidebar-arrow"></i>
                </button>
                <div class="sidebar-dropdown-menu">
                    <a asp-action="Browse" class="sidebar-dropdown-item">
                        <i class="fas fa-gamepad"></i>
                        <span data-tr="Oyunlar" data-en="Games">Oyunlar</span>
                    </a>
                    <a asp-action="Browse" asp-route-type="assets" class="sidebar-dropdown-item">
                        <i class="fas fa-cube"></i>
                        <span data-tr="Oyun varlıkları" data-en="Game assets">Oyun varlıkları</span>
                    </a>
                    <a asp-action="Browse" asp-route-type="tools" class="sidebar-dropdown-item">
                        <i class="fas fa-tools"></i>
                        <span data-tr="Araçlar" data-en="Tools">Araçlar</span>
                    </a>
                    <a asp-action="Browse" asp-route-type="albums" class="sidebar-dropdown-item">
                        <i class="fas fa-music"></i>
                        <span data-tr="Albümler" data-en="Albums & soundtracks">Albümler</span>
                    </a>
                    <a asp-action="Browse" asp-route-type="physical" class="sidebar-dropdown-item">
                        <i class="fas fa-box"></i>
                        <span data-tr="Fiziksel oyunlar" data-en="Physical games">Fiziksel oyunlar</span>
                    </a>
                    <a asp-action="Browse" asp-route-type="comics" class="sidebar-dropdown-item">
                        <i class="fas fa-book-open"></i>
                        <span data-tr="Çizgi Romanlar" data-en="Comics">Çizgi Romanlar</span>
                    </a>
                    <a asp-action="Browse" asp-route-type="books" class="sidebar-dropdown-item">
                        <i class="fas fa-book"></i>
                        <span data-tr="Kitaplar" data-en="Books">Kitaplar</span>
                    </a>
                </div>
            </div>

            <!-- Fiyata Göre (Açılır) -->
            <div class="sidebar-dropdown">
                <button class="sidebar-item sidebar-dropdown-toggle">
                    <i class="fas fa-dollar-sign"></i>
                    <span data-tr="Fiyata Göre" data-en="Games by price">Fiyata Göre</span>
                    <i class="fas fa-chevron-down sidebar-arrow"></i>
                </button>
                <div class="sidebar-dropdown-menu">
                    <a asp-action="Browse" asp-route-filter="sale" class="sidebar-dropdown-item">
                        <i class="fas fa-tag"></i>
                        <span data-tr="İndirimde" data-en="On Sale">İndirimde</span>
                    </a>
                    <a asp-action="Browse" asp-route-filter="free" class="sidebar-dropdown-item">
                        <i class="fas fa-gift"></i>
                        <span data-tr="Ücretsiz oyunlar" data-en="Free games">Ücretsiz oyunlar</span>
                    </a>
                    <a asp-action="Browse" asp-route-filter="demo" class="sidebar-dropdown-item">
                        <i class="fas fa-play-circle"></i>
                        <span data-tr="Demo ile birlikte" data-en="With demo">Demo ile birlikte</span>
                    </a>
                    <a asp-action="Browse" asp-route-filter="top" class="sidebar-dropdown-item">
                        <i class="fas fa-fire"></i>
                        <span data-tr="En çok satanlar" data-en="Top sellers">En çok satanlar</span>
                    </a>
                    <a asp-action="Browse" asp-route-price="5" class="sidebar-dropdown-item">
                        <i class="fas fa-coins"></i>
                        <span data-tr="5₺ veya daha az" data-en="$5 or less">5₺ veya daha az</span>
                    </a>
                    <a asp-action="Browse" asp-route-price="15" class="sidebar-dropdown-item">
                        <i class="fas fa-coins"></i>
                        <span data-tr="15₺ veya daha az" data-en="$15 or less">15₺ veya daha az</span>
                    </a>
                </div>
            </div>

            <!-- Blog (Açılır) -->
            <div class="sidebar-dropdown">
                <button class="sidebar-item sidebar-dropdown-toggle">
                    <i class="fas fa-newspaper"></i>
                    <span data-tr="Blog'dan" data-en="From the blog">Blog'dan</span>
                    <i class="fas fa-chevron-down sidebar-arrow"></i>
                </button>
                <div class="sidebar-dropdown-menu">
                    <a asp-action="Blog" class="sidebar-dropdown-item sidebar-blog-item">
                        <div class="blog-content">
                            <span class="blog-date">48g</span>
                            <span class="blog-title" data-tr="Yaratıcılar Günü nedir?" data-en="What is Creator Day?">Yaratıcılar Günü nedir?</span>
                        </div>
                    </a>
                    <a asp-action="Blog" class="sidebar-dropdown-item sidebar-blog-item">
                        <div class="blog-content">
                            <span class="blog-date">50g</span>
                            <span class="blog-title" data-tr="Kara Cuma İndirimleri!" data-en="Black Friday Sales!">Kara Cuma İndirimleri!</span>
                        </div>
                    </a>
                    <a asp-action="Blog" class="sidebar-dropdown-item sidebar-blog-item">
                        <div class="blog-content">
                            <span class="blog-date">80g</span>
                            <span class="blog-title" data-tr="Cadılar Bayramı İndirimi!" data-en="Halloween Sale 2025!">Cadılar Bayramı İndirimi!</span>
                        </div>
                    </a>
                    <a asp-action="Blog" class="sidebar-dropdown-item sidebar-view-all">
                        <span data-tr="Tüm güncellemeleri görüntüle →" data-en="View all updates →">Tüm güncellemeleri görüntüle →</span>
                    </a>
                </div>
            </div>

            <div class="sidebar-divider"></div>

            <!-- Kontrol Paneli -->
            <a asp-controller="Dashboard" asp-action="Index" class="sidebar-item">
                <i class="fas fa-tachometer-alt"></i>
                <span data-tr="Kontrol Paneli" data-en="Dashboard">Kontrol Paneli</span>
            </a>
        </nav>

        <!-- Sidebar Footer - Social & App -->
        <div class="sidebar-footer">
            <div class="sidebar-social">
                <a href="https://twitter.com/gamesaway" target="_blank" aria-label="Twitter" class="sidebar-social-link">
                    <i class="fab fa-twitter"></i>
                </a>
                <a href="https://facebook.com/gamesaway" target="_blank" aria-label="Facebook" class="sidebar-social-link">
                    <i class="fab fa-facebook"></i>
                </a>
                <a href="https://instagram.com/gamesaway" target="_blank" aria-label="Instagram" class="sidebar-social-link">
                    <i class="fab fa-instagram"></i>
                </a>
                <a href="https://discord.com/gamesaway" target="_blank" aria-label="Discord" class="sidebar-social-link">
                    <i class="fab fa-discord"></i>
                </a>
            </div>
            <a href="#" class="sidebar-download-app">
                <i class="fas fa-mobile-alt"></i>
                <span data-tr="Uygulamayı İndir" data-en="Download app">Uygulamayı İndir</span>
            </a>
        </div>
    </aside>

    <!-- Main Content -->
    <div class="home-main">
        <!-- Hero Section -->
        <section class="hero-simple">
            <div class="hero-simple-content">
                <h1 class="hero-simple-title">
                    <span data-tr="Binlerce Ücretsiz Oyun" data-en="Thousands of Free Games">Binlerce Ücretsiz Oyun</span><br>
                    <span class="gradient-text" data-tr="Anında Keşfet ve Oyna" data-en="Discover and Play Instantly">Anında Keşfet ve Oyna</span>
                </h1>
                <p class="hero-simple-subtitle"
                    data-tr="Bağımsız geliştiricilerin en iyi oyunlarını keşfedin. İndirme yok, reklam yok. Sadece oyna."
                    data-en="Discover the best games from indie developers. No downloads, no ads. Just play.">
                    Bağımsız geliştiricilerin en iyi oyunlarını keşfedin. İndirme yok, reklam yok. Sadece oyna.</p>
                
                <div class="hero-simple-actions">
                    <a asp-action="Browse" class="btn btn-primary btn-large">
                        <i class="fas fa-gamepad"></i>
                        <span data-tr="Oyunları Keşfet" data-en="Browse Games">Oyunları Keşfet</span>
                    </a>
                    <a asp-action="ForDevelopers" class="btn btn-outline btn-large">
                        <i class="fas fa-code"></i>
                        <span data-tr="Geliştirici misin?" data-en="Are you a Developer?">Geliştirici misin?</span>
                    </a>
                </div>

                <div class="hero-simple-stats">
                    <div class="stat-item-inline">
                        <strong>10,000+</strong>
                        <span data-tr="Oyun" data-en="Games">Oyun</span>
                    </div>
                    <div class="stat-item-inline">
                        <strong>1M+</strong>
                        <span data-tr="Oyuncu" data-en="Players">Oyuncu</span>
                    </div>
                    <div class="stat-item-inline">
                        <strong>100+</strong>
                        <span data-tr="Geliştirici" data-en="Developers">Geliştirici</span>
                    </div>
                </div>
            </div>
        </section>

        <!-- Featured Games - Öne Çıkan Oyunlar -->
        <section class="featured-games">
            <div class="section-header">
                <h2 class="section-title" data-tr="Öne Çıkan Oyunlar" data-en="Featured Games">Öne Çıkan Oyunlar</h2>
                <a asp-action="Browse" class="btn btn-text">
                    <span data-tr="Tümünü Gör" data-en="View All">Tümünü Gör</span>
                    <i class="fas fa-arrow-right"></i>
                </a>
            </div>
            
            <div class="games-grid">
            <!-- Game Card 1 -->
            <div class="game-card">
                <a asp-action="GameDetail" asp-route-id="1" class="game-card-link">
                    <div class="game-card-image" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                        <div class="game-card-overlay">
                            <span class="game-card-play"><i class="fas fa-play"></i></span>
                        </div>
                    </div>
                    <div class="game-card-content">
                        <h3 class="game-card-title">Epic Battle Arena</h3>
                        <p class="game-card-developer">by StudioX</p>
                        <div class="game-card-footer">
                            <span class="game-card-category">Aksiyon</span>
                            <span class="game-card-rating">
                                <i class="fas fa-star"></i> 4.8
                            </span>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Game Card 2 -->
            <div class="game-card">
                <a asp-action="GameDetail" asp-route-id="2" class="game-card-link">
                    <div class="game-card-image" style="background: linear-gradient(135deg, #764ba2 0%, #f093fb 100%);">
                        <div class="game-card-overlay">
                            <span class="game-card-play"><i class="fas fa-play"></i></span>
                        </div>
                    </div>
                    <div class="game-card-content">
                        <h3 class="game-card-title">Mind Maze</h3>
                        <p class="game-card-developer">by PuzzleMaster</p>
                        <div class="game-card-footer">
                            <span class="game-card-category">Bulmaca</span>
                            <span class="game-card-rating">
                                <i class="fas fa-star"></i> 4.9
                            </span>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Game Card 3 -->
            <div class="game-card">
                <a asp-action="GameDetail" asp-route-id="3" class="game-card-link">
                    <div class="game-card-image" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                        <div class="game-card-overlay">
                            <span class="game-card-play"><i class="fas fa-play"></i></span>
                        </div>
                    </div>
                    <div class="game-card-content">
                        <h3 class="game-card-title">Speed Rush</h3>
                        <p class="game-card-developer">by RaceTeam</p>
                        <div class="game-card-footer">
                            <span class="game-card-category">Yarış</span>
                            <span class="game-card-rating">
                                <i class="fas fa-star"></i> 4.7
                            </span>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Game Card 4 -->
            <div class="game-card">
                <a asp-action="GameDetail" asp-route-id="4" class="game-card-link">
                    <div class="game-card-image" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                        <div class="game-card-overlay">
                            <span class="game-card-play"><i class="fas fa-play"></i></span>
                        </div>
                    </div>
                    <div class="game-card-content">
                        <h3 class="game-card-title">Lost Kingdom</h3>
                        <p class="game-card-developer">by AdventureStudio</p>
                        <div class="game-card-footer">
                            <span class="game-card-category">Macera</span>
                            <span class="game-card-rating">
                                <i class="fas fa-star"></i> 4.6
                            </span>
                        </div>
                    </div>
                </a>
            </div>
            </div>
        </section>

        <!-- Categories - Basit Kategori Seçimi -->
        <section class="categories-simple">
            <h2 class="section-title" data-tr="Kategorilere Göre Keşfet" data-en="Browse by Category">Kategorilere Göre Keşfet</h2>
            <div class="categories-simple-grid">
            <a asp-action="Browse" asp-route-category="action" class="category-simple-card">
                <div class="category-simple-icon">
                    <i class="fas fa-fist-raised"></i>
                </div>
                <h3 data-tr="Aksiyon" data-en="Action">Aksiyon</h3>
