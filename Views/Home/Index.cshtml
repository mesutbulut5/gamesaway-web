                </div>
                <h3 data-tr="Bulmaca" data-en="Puzzle">Bulmaca</h3>
                <p data-tr="1,800+ Oyun" data-en="1,800+ Games">1,800+ Oyun</p>
            </a>

            <a asp-action="Browse" asp-route-category="racing" class="category-simple-card">
                <div class="category-simple-icon">
                    <i class="fas fa-car"></i>
                </div>
                <h3 data-tr="Yarış" data-en="Racing">Yarış</h3>
                <p data-tr="1,200+ Oyun" data-en="1,200+ Games">1,200+ Oyun</p>
            </a>

            <a asp-action="Browse" asp-route-category="adventure" class="category-simple-card">
                <div class="category-simple-icon">
                    <i class="fas fa-hat-wizard"></i>
                </div>
                <h3 data-tr="Macera" data-en="Adventure">Macera</h3>
                <p data-tr="1,500+ Oyun" data-en="1,500+ Games">1,500+ Oyun</p>
            </a>

            <a asp-action="Browse" asp-route-category="sports" class="category-simple-card">
                <div class="category-simple-icon">
                    <i class="fas fa-football-ball"></i>
                </div>
                <h3 data-tr="Spor" data-en="Sports">Spor</h3>
                <p data-tr="900+ Oyun" data-en="900+ Games">900+ Oyun</p>
            </a>

            <a asp-action="Browse" asp-route-category="strategy" class="category-simple-card">
                <div class="category-simple-icon">
                    <i class="fas fa-chess"></i>
                </div>
                <h3 data-tr="Strateji" data-en="Strategy">Strateji</h3>
                <p data-tr="1,100+ Oyun" data-en="1,100+ Games">1,100+ Oyun</p>
            </a>
            </div>
        </section>

        <!-- New Games - Yeni Eklenenler -->
        <section class="new-games">
            <div class="section-header">
                <h2 class="section-title" data-tr="Yeni Eklenenler" data-en="Recently Added">Yeni Eklenenler</h2>
                <a asp-action="Browse" asp-route-sort="newest" class="btn btn-text">
                    <span data-tr="Tümünü Gör" data-en="View All">Tümünü Gör</span>
                    <i class="fas fa-arrow-right"></i>
                </a>
            </div>
            
            <div class="games-horizontal-scroll">
            <div class="game-card-small">
                <a asp-action="GameDetail" asp-route-id="5">
                    <div style="width: 200px; height: 200px; background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%); border-radius: 12px; margin-bottom: 0.75rem;"></div>
                    <h4>Cyber Runner</h4>
                    <p class="game-card-small-category">Aksiyon</p>
