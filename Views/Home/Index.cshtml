                <div class="cta-developers-features">
                    <div class="cta-feature-item">
                        <i class="fas fa-upload"></i>
                        <span data-tr="Kolay Yükleme" data-en="Easy Upload">Kolay Yükleme</span>
                    </div>
                    <div class="cta-feature-item">
                        <i class="fas fa-chart-line"></i>
                        <span data-tr="Detaylı Analytics" data-en="Detailed Analytics">Detaylı Analytics</span>
                    </div>
                    <div class="cta-feature-item">
                        <i class="fas fa-dollar-sign"></i>
                        <span data-tr="Gelir Takibi" data-en="Revenue Tracking">Gelir Takibi</span>
                    </div>
