@{
    ViewData["Title"] = "Kayıt Ol";
}

<section class="auth-section">
    <div class="container">
        <div class="auth-card animate-fadeInUp">
            <div class="auth-header">
                <div class="logo-icon">
                    <i class="fas fa-gamepad"></i>
                </div>
                <h1 data-tr="Hesap Oluştur" data-en="Create Account">Hesap Oluştur</h1>
                <p data-tr="Ücretsiz hesabınızı oluşturun" data-en="Create your free account">Ücretsiz hesabınızı oluşturun</p>
            </div>

            <form asp-action="Register" method="post" class="auth-form">
                <div class="form-group">
                    <label data-tr="Ad Soyad" data-en="Full Name">Ad Soyad</label>
                    <input type="text" name="name" placeholder="John Doe" required>
                </div>

                <div class="form-group">
                    <label data-tr="E-posta" data-en="Email">E-posta</label>
                    <input type="email" name="email" placeholder="you@example.com" required>
                </div>

                <div class="form-group">
                    <label data-tr="Şifre" data-en="Password">Şifre</label>
                    <input type="password" name="password" placeholder="••••••••" required>
                </div>

                <div class="form-group">
                    <label data-tr="Şifre Tekrar" data-en="Confirm Password">Şifre Tekrar</label>
                    <input type="password" name="confirmPassword" placeholder="••••••••" required>
                </div>

                <div class="form-options">
                    <label class="checkbox-label">
                        <input type="checkbox" name="terms" required>
                        <span>
                            <span data-tr="Kabul ediyorum" data-en="I agree to the">Kabul ediyorum</span>
                            <a asp-controller="Home" asp-action="Terms" data-tr="Kullanım Koşulları" data-en="Terms of Service">Kullanım Koşulları</a>
                        </span>
                    </label>
                </div>

                <button type="submit" class="btn-auth">
                    <span data-tr="Hesap Oluştur" data-en="Create Account">Hesap Oluştur</span>
                </button>
            </form>

            <div class="auth-footer">
                <p>
                    <span data-tr="Zaten hesabınız var mı?" data-en="Already have an account?">Zaten hesabınız var mı?</span>
                    <a asp-action="Login" data-tr="Giriş Yap" data-en="Sign In">Giriş Yap</a>
                </p>
            </div>
        </div>
    </div>
</section>
