@{
    ViewData["Title"] = "Giriş Yap";
}

<section class="auth-section">
    <div class="container">
        <div class="auth-card animate-fadeInUp">
            <div class="auth-header">
                <img src="~/assets/logo.png" alt="GamesAway" class="auth-logo-img">
                <h1 data-tr="Hoş Geldiniz" data-en="Welcome Back">Hoş Geldiniz</h1>
                <p data-tr="Hesabınıza giriş yapın" data-en="Sign in to your account">Hesabınıza giriş yapın</p>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert-error">
                    <i class="fas fa-exclamation-circle"></i>
                    <span>@ViewBag.Error</span>
                </div>
            }

            <form asp-action="Login" method="post" class="auth-form">
                <div class="form-group">
                    <label data-tr="E-posta" data-en="Email">E-posta</label>
                    <input type="email" name="email" placeholder="you@example.com" required>
                </div>

                <div class="form-group">
                    <label data-tr="Şifre" data-en="Password">Şifre</label>
                    <input type="password" name="password" placeholder="••••••••" required>
                </div>

                <div class="form-options">
                    <label class="checkbox-label">
                        <input type="checkbox" name="remember">
                        <span data-tr="Beni Hatırla" data-en="Remember me">Beni Hatırla</span>
                    </label>
                    <a href="#" class="forgot-link" data-tr="Şifremi Unuttum?" data-en="Forgot Password?">Şifremi Unuttum?</a>
                </div>

                <button type="submit" class="btn-auth">
                    <span data-tr="Giriş Yap" data-en="Sign In">Giriş Yap</span>
                </button>
            </form>

            <div class="auth-footer">
                <p>
                    <span data-tr="Hesabınız yok mu?" data-en="Don't have an account?">Hesabınız yok mu?</span>
                    <a asp-action="Register" data-tr="Kayıt Ol" data-en="Sign Up">Kayıt Ol</a>
                </p>
            </div>

            <div class="demo-info">
                <i class="fas fa-info-circle"></i>
                <span data-tr="Demo: demo@gamesaway.com / demo123" data-en="Demo: demo@gamesaway.com / demo123">Demo: demo@gamesaway.com / demo123</span>
            </div>

            <!-- Temporary Admin Access - REMOVE IN PRODUCTION -->
            <div class="admin-access-temp" style="margin-top: 20px; padding: 15px; background: linear-gradient(135deg, #ff6b6b, #ee5a5a); border-radius: 12px; text-align: center;">
                <p style="color: white; margin-bottom: 10px; font-size: 12px;">
                    <i class="fas fa-shield-alt"></i>
                    <span data-tr="Geliştirici Modu - Canlıda Kaldır!" data-en="Dev Mode - Remove in Production!">Geliştirici Modu - Canlıda Kaldır!</span>
                </p>
                <form asp-controller="Auth" asp-action="MakeAdmin" method="get" style="display: inline;">
                    <input type="email" name="email" placeholder="Email adresiniz" required style="padding: 8px 12px; border-radius: 6px; border: none; margin-right: 8px; width: 200px;">
                    <button type="submit" style="padding: 8px 16px; background: white; color: #ee5a5a; border: none; border-radius: 6px; cursor: pointer; font-weight: bold;">
                        <i class="fas fa-crown"></i>
                        <span data-tr="Admin Yap" data-en="Make Admin">Admin Yap</span>
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>
