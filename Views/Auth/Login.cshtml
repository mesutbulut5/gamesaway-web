@{
    ViewData["Title"] = "Giriş Yap";
}

<section class="auth-section">
    <div class="container">
        <div class="auth-card animate-fadeInUp">
            <div class="auth-header">
                <div class="logo-icon">
                    <i class="fas fa-gamepad"></i>
                </div>
                <h1 data-tr="Hoş Geldiniz" data-en="Welcome Back">Hoş Geldiniz</h1>
                <p data-tr="Hesabınıza giriş yapın" data-en="Sign in to your account">Hesabınıza giriş yapın</p>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert-error">
                    <i class="fas fa-exclamation-circle"></i>
                    <span>@ViewBag.Error</span>
                </div>
            }

            <form asp-action="Login" method="post" class="auth-form">
                <div class="form-group">
                    <label data-tr="E-posta" data-en="Email">E-posta</label>
                    <input type="email" name="email" placeholder="you@example.com" required>
                </div>

                <div class="form-group">
                    <label data-tr="Şifre" data-en="Password">Şifre</label>
                    <input type="password" name="password" placeholder="••••••••" required>
                </div>

                <div class="form-options">
                    <label class="checkbox-label">
                        <input type="checkbox" name="remember">
                        <span data-tr="Beni Hatırla" data-en="Remember me">Beni Hatırla</span>
                    </label>
                    <a href="#" class="forgot-link" data-tr="Şifremi Unuttum?" data-en="Forgot Password?">Şifremi Unuttum?</a>
                </div>

                <button type="submit" class="btn-auth">
                    <span data-tr="Giriş Yap" data-en="Sign In">Giriş Yap</span>
                </button>
            </form>

            <div class="auth-footer">
                <p>
                    <span data-tr="Hesabınız yok mu?" data-en="Don't have an account?">Hesabınız yok mu?</span>
                    <a asp-action="Register" data-tr="Kayıt Ol" data-en="Sign Up">Kayıt Ol</a>
                </p>
            </div>

            <div class="demo-info">
                <i class="fas fa-info-circle"></i>
                <span data-tr="Demo: demo@gamesaway.com / demo123" data-en="Demo: demo@gamesaway.com / demo123">Demo: demo@gamesaway.com / demo123</span>
            </div>
        </div>
    </div>
</section>
