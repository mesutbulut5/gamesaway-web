    ViewData["Title"] = "Paket Yönetimi";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<!-- Stats -->
<div class="admin-stats">
    <div class="admin-stat-card">
        <div class="admin-stat-icon blue"><i class="fas fa-box"></i></div>
        <div class="admin-stat-info">
            <h3>8</h3>
            <p>Aktif Paket</p>
        </div>
    </div>
    <div class="admin-stat-card">
        <div class="admin-stat-icon green"><i class="fas fa-shopping-cart"></i></div>
        <div class="admin-stat-info">
            <h3>2,450</h3>
            <p>Toplam Satış</p>
        </div>
    </div>
    <div class="admin-stat-card">
        <div class="admin-stat-icon purple"><i class="fas fa-lira-sign"></i></div>
        <div class="admin-stat-info">
            <h3>₺18,500</h3>
            <p>Paket Geliri</p>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="admin-quick-actions">
    <a href="#" class="admin-quick-btn">
        <i class="fas fa-plus"></i>
        <span>Yeni Paket Oluştur</span>
    </a>
</div>

