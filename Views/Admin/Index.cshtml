    <div class="admin-table-card">
        <div class="admin-table-header">
            <h2><i class="fas fa-user-plus"></i> Son Kayıt Olan Kullanıcılar</h2>
        </div>
        <table class="admin-table">
            <thead>
                <tr>
                    <th>Kullanıcı</th>
                    <th>Rol</th>
                    <th>Tarih</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <div class="admin-table-user">
                            <div class="admin-table-avatar"><i class="fas fa-user"></i></div>
