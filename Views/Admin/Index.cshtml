@{
    ViewData["Title"] = "Genel Bakış";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<!-- Stats Cards -->
<div class="admin-stats">
    <div class="admin-stat-card">
        <div class="admin-stat-icon blue"><i class="fas fa-users"></i></div>
        <div class="admin-stat-info">
            <h3>@(ViewBag.TotalUsers ?? 0)</h3>
            <p>Toplam Kullanıcı</p>
        </div>
        <span class="admin-stat-change up"><i class="fas fa-arrow-up"></i> 12%</span>
    </div>
    <div class="admin-stat-card">
        <div class="admin-stat-icon green"><i class="fas fa-gamepad"></i></div>
        <div class="admin-stat-info">
            <h3>@(ViewBag.TotalGames ?? 0)</h3>
            <p>Toplam Oyun</p>
        </div>
        <span class="admin-stat-change up"><i class="fas fa-arrow-up"></i> 8%</span>
    </div>
    <div class="admin-stat-card">
        <div class="admin-stat-icon purple"><i class="fas fa-lira-sign"></i></div>
        <div class="admin-stat-info">
            <h3>₺@(ViewBag.TotalRevenue ?? 0)</h3>
            <p>Toplam Gelir</p>
        </div>
        <span class="admin-stat-change up"><i class="fas fa-arrow-up"></i> 23%</span>
    </div>
    <div class="admin-stat-card">
        <div class="admin-stat-icon orange"><i class="fas fa-clock"></i></div>
        <div class="admin-stat-info">
            <h3>@(ViewBag.PendingApprovals ?? 0)</h3>
            <p>Onay Bekleyen</p>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="admin-quick-actions">
    <a asp-action="Approvals" class="admin-quick-btn">
        <i class="fas fa-check-circle"></i>
        <span>Oyunları Onayla</span>
    </a>
    <a asp-action="Featured" class="admin-quick-btn">
        <i class="fas fa-star"></i>
        <span>Öne Çıkan Seç</span>
    </a>
    <a asp-action="Announcements" class="admin-quick-btn">
        <i class="fas fa-bullhorn"></i>
        <span>Duyuru Yayınla</span>
    </a>
    <a asp-action="Reports" class="admin-quick-btn">
        <i class="fas fa-flag"></i>
        <span>Raporları İncele</span>
    </a>
</div>

<!-- Charts -->
<div class="admin-charts">
    <div class="admin-chart-card">
        <h3><i class="fas fa-chart-area"></i> Gelir Grafiği (Son 30 Gün)</h3>
        <div class="chart-placeholder">
            <span>Grafik verisi yüklenecek...</span>
        </div>
    </div>
    <div class="admin-chart-card">
        <h3><i class="fas fa-chart-pie"></i> Oyun Kategorileri</h3>
        <div class="chart-placeholder">
            <span>Grafik verisi yüklenecek...</span>
        </div>
    </div>
</div>

<!-- Recent Activity -->
<div class="admin-table-card">
    <div class="admin-table-header">
        <h2><i class="fas fa-history"></i> Son Aktiviteler</h2>
