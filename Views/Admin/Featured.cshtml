@{
    ViewData["Title"] = "Öne Çıkanlar";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<!-- Current Featured -->
<div class="admin-table-card">
    <div class="admin-table-header">
        <h2><i class="fas fa-star"></i> Şu An Öne Çıkan Oyunlar</h2>
        <button class="btn btn-primary btn-sm" onclick="document.getElementById('addFeaturedModal').style.display='flex'">
            <i class="fas fa-plus"></i> Oyun Ekle
        </button>
    </div>
    <div class="featured-grid">
        <div class="featured-item">
            <div class="featured-thumb" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);"></div>
            <div class="featured-info">
                <h4>Epic Battle Arena</h4>
                <p>StudioX • Aksiyon</p>
                <span class="featured-position">1. Sıra</span>
            </div>
            <div class="featured-actions">
                <button class="admin-action-btn" title="Yukarı"><i class="fas fa-arrow-up"></i></button>
                <button class="admin-action-btn" title="Aşağı"><i class="fas fa-arrow-down"></i></button>
                <button class="admin-action-btn danger" title="Kaldır"><i class="fas fa-times"></i></button>
            </div>
        </div>
        <div class="featured-item">
            <div class="featured-thumb" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);"></div>
            <div class="featured-info">
                <h4>Mind Maze</h4>
                <p>PuzzleMaster • Bulmaca</p>
                <span class="featured-position">2. Sıra</span>
            </div>
            <div class="featured-actions">
                <button class="admin-action-btn" title="Yukarı"><i class="fas fa-arrow-up"></i></button>
                <button class="admin-action-btn" title="Aşağı"><i class="fas fa-arrow-down"></i></button>
                <button class="admin-action-btn danger" title="Kaldır"><i class="fas fa-times"></i></button>
            </div>
        </div>
        <div class="featured-item">
            <div class="featured-thumb" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);"></div>
            <div class="featured-info">
                <h4>Speed Rush</h4>
                <p>RaceTeam • Yarış</p>
                <span class="featured-position">3. Sıra</span>
            </div>
            <div class="featured-actions">
                <button class="admin-action-btn" title="Yukarı"><i class="fas fa-arrow-up"></i></button>
                <button class="admin-action-btn" title="Aşağı"><i class="fas fa-arrow-down"></i></button>
                <button class="admin-action-btn danger" title="Kaldır"><i class="fas fa-times"></i></button>
            </div>
        </div>
        <div class="featured-item">
            <div class="featured-thumb" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);"></div>
            <div class="featured-info">
                <h4>Lost Kingdom</h4>
                <p>AdventureStudio • Macera</p>
                <span class="featured-position">4. Sıra</span>
            </div>
            <div class="featured-actions">
                <button class="admin-action-btn" title="Yukarı"><i class="fas fa-arrow-up"></i></button>
                <button class="admin-action-btn" title="Aşağı"><i class="fas fa-arrow-down"></i></button>
                <button class="admin-action-btn danger" title="Kaldır"><i class="fas fa-times"></i></button>
            </div>
        </div>
    </div>
</div>

<!-- Featured Categories -->
<div class="admin-charts">
    <div class="admin-table-card">
        <div class="admin-table-header">
            <h2><i class="fas fa-fire"></i> Öne Çıkan Kategoriler</h2>
        </div>
        <div class="category-list">
            <div class="category-item"><span>Aksiyon</span><button class="admin-action-btn danger"><i class="fas fa-times"></i></button></div>
            <div class="category-item"><span>Bulmaca</span><button class="admin-action-btn danger"><i class="fas fa-times"></i></button></div>
            <div class="category-item"><span>Macera</span><button class="admin-action-btn danger"><i class="fas fa-times"></i></button></div>
        </div>
    </div>
    <div class="admin-table-card">
        <div class="admin-table-header">
            <h2><i class="fas fa-tags"></i> Öne Çıkan Etiketler</h2>
        </div>
        <div class="tag-list">
            <span class="admin-tag">Multiplayer</span>
            <span class="admin-tag">Pixel Art</span>
            <span class="admin-tag">Roguelike</span>
            <span class="admin-tag">Horror</span>
        </div>
    </div>
</div>

<style>
.featured-grid { padding: 1rem; display: flex; flex-direction: column; gap: 0.75rem; }
.featured-item { display: flex; align-items: center; gap: 1rem; padding: 1rem; background: rgba(255,255,255,0.02); border-radius: 10px; }
.featured-thumb { width: 60px; height: 60px; border-radius: 8px; flex-shrink: 0; }
.featured-info { flex: 1; }
.featured-info h4 { font-size: 1rem; font-weight: 600; color: white; margin: 0 0 0.25rem 0; }
.featured-info p { font-size: 0.85rem; color: #666; margin: 0; }
.featured-position { font-size: 0.8rem; color: #667eea; font-weight: 500; }
.featured-actions { display: flex; gap: 0.5rem; }
.category-list { padding: 1rem; }
.category-item { display: flex; justify-content: space-between; align-items: center; padding: 0.75rem; border-bottom: 1px solid rgba(255,255,255,0.05); color: white; }
.tag-list { padding: 1rem; display: flex; flex-wrap: wrap; gap: 0.5rem; }
.admin-tag { padding: 0.5rem 1rem; background: rgba(102,126,234,0.2); color: #667eea; border-radius: 20px; font-size: 0.85rem; }
.btn-sm { padding: 0.5rem 1rem; font-size: 0.9rem; }
</style>
